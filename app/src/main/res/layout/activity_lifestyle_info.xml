<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_smoking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Курение"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_alcohol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Употребление алкоголя"
        app:layout_constraintTop_toBottomOf="@id/switch_smoking"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Занятия спортом"
        app:layout_constraintTop_toBottomOf="@id/switch_alcohol"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_fruit_intake"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/switch_exercise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>



    <Button
        android:id="@+id/button_save_lifestyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        app:layout_constraintTop_toBottomOf="@id/spinner_fruit_intake"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
