<resources>

    <!-- 🔹 Стиль для кнопки "Sign Up" -->
    <style name="SignUpButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_signup</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!-- 🔹 Стиль для кнопки "Login" -->
    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/borderColor</item>
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

        <!-- 🔹 Основная тема приложения -->
    <style name="Theme.TamyrApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorPrimary">@color/buttonColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
    </style>

        <!-- 🔹 Тема для Splash Screen (Android 12+) -->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>



</resources>
